{
	"name": "debuggy/gauger",
	"type": "library",
	"description": "Highly extensible and comprehensive tool for measuring and debugging PHP scripts and applications",
	"keywords": ["timer", "profiler", "benchmark", "gauge", "debug"],
	"license": ["MIT", "Apache-2.0"],
	"authors": [{"name": "Mr Serge"}],
	"require": {
		"php": ">=5.6"
	},
	"require-dev": {
		"phpunit/phpunit": "~5",
		"satooshi/php-coveralls": "~2",
		"php-coveralls/php-coveralls": "^2.1"
	},
	"autoload": {
		"psr-4": {
			"Debuggy\\": "src/Debuggy/"
		}
	},
	"archive": {
			"exclude": [
					".coveralls.yml",
					".git",
					".gitlab-ci.yml",
					".travis.yml",
					"build",
					"composer.phar",
					"phpunit.xml",
					"tests",
					"uml",
					"vendor"
			]
	}
}
